<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Background (Gradient) -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/background_space_gradient">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Welcome to Interstellar"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:shadowColor="#6A0DAD"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnMainRegister"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:elevation="10dp"
            android:background="@drawable/space_button_primary"
            android:padding="14dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnMainLogin"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:elevation="10dp"
            android:background="@drawable/space_button_secondary"
            android:padding="14dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


