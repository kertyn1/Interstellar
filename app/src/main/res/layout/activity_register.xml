<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/background_space_gradient">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:shadowColor="#6A0DAD"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="12" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:background="@drawable/rounded_input_log"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/etRegisterUsername"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:background="@drawable/rounded_input_log"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:background="@drawable/rounded_input_log"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc" />

    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:background="@drawable/rounded_input_log"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc" />

    <!-- Register Button -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/space_button_primary"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:elevation="10dp" />

    <!-- Go to Login -->
    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/space_button_secondary"
        android:text="Already have an account? â†’"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        android:elevation="10dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>
